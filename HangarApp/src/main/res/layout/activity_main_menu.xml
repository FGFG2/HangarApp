<?xml version="1.0" encoding="UTF-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/mainMenuLayoutContainer"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    android:orientation="horizontal">
    <RelativeLayout
        android:layout_width="0dip"
        android:layout_height="fill_parent"
        android:layout_weight="0.5">

        <!-- Here are buttons from MainMenuActivity -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:baselineAligned="false"
            android:orientation="vertical"
            android:padding="15dp"
            android:weightSum="4">
            <Button
                android:id="@+id/menu_batteryData"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:layout_weight="1"
                android:background="@drawable/button"
                android:clickable="true"
                android:gravity="left|center_vertical"
                android:onClick="onMenuItemClick"
                android:paddingLeft="15dp"
                android:text="@string/battery_data"
                android:textColor="#7ca700"
                android:textSize="20sp"
                android:textStyle="bold" />
            <Button
                android:id="@+id/menu_factoryTest"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:layout_weight="1"
                android:background="@drawable/button"
                android:clickable="true"
                android:gravity="left|center_vertical"
                android:onClick="onMenuItemClick"
                android:paddingLeft="15dp"
                android:text="@string/factory_test"
                android:textColor="#7ca700"
                android:textSize="20sp"
                android:textStyle="bold" />
            <Button
                android:id="@+id/menu_achievements"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="25dp"
                android:layout_weight="1"
                android:background="@drawable/button"
                android:clickable="true"
                android:gravity="left|center_vertical"
                android:onClick="onMenuItemClick"
                android:paddingLeft="15dp"
                android:text="@string/achievements"
                android:textColor="#7ca700"
                android:textSize="20sp"
                android:textStyle="bold" />
            <Button
                android:id="@+id/menu_exit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="25dp"
                android:layout_weight="1"
                android:background="@drawable/button"
                android:clickable="true"
                android:gravity="left|center_vertical"
                android:onClick="onMenuItemClick"
                android:paddingLeft="15dp"
                android:text="@string/exit"
                android:textColor="#7ca700"
                android:textSize="20sp"
                android:textStyle="bold" />
        </LinearLayout>
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/fragment_container"
        android:layout_width="0dip"
        android:layout_height="fill_parent"
        android:layout_weight="0.5" />
</LinearLayout>