<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    android:orientation="horizontal"
    tools:context="com.tobyrich.dev.hangarapp.activities.LimitSetupActivity">

    <RelativeLayout
        android:layout_width="0dip"
        android:layout_height="fill_parent"
        android:layout_weight="0.4">

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="20dp"
            android:orientation="vertical"
            android:paddingLeft="15dp"
            android:weightSum="7">
            <TextView
                android:id="@+id/rpm_label"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_marginTop="5dp"
                android:layout_weight="1"
                android:gravity="left|center_vertical"
                android:text="@string/rpm"
                android:textColor="#7ca700"
                android:textSize="20sp" />
            <TextView
                android:id="@+id/maxTilt_label"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_marginTop="5dp"
                android:layout_weight="1"
                android:gravity="left|center_vertical"
                android:paddingTop="5dp"
                android:text="@string/max_tilt"
                android:textColor="#7ca700"
                android:textSize="20sp" />
            <TextView
                android:id="@+id/maxHeight_label"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_marginTop="5dp"
                android:layout_weight="1"
                android:gravity="left|center_vertical"
                android:paddingTop="5dp"
                android:text="@string/max_height_limit"
                android:textColor="#7ca700"
                android:textSize="20sp" />
            <TextView
                android:id="@+id/remainingCharge_label"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_marginTop="5dp"
                android:layout_weight="1"
                android:gravity="left|center_vertical"
                android:paddingTop="5dp"
                android:text="@string/remaining_charge"
                android:textColor="#7ca700"
                android:textSize="20sp" />
        </LinearLayout>
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="0dip"
        android:layout_height="fill_parent"
        android:layout_marginTop="15dp"
        android:layout_weight="0.2">
        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:gravity="right"
            android:orientation="vertical"
            android:paddingRight="15dp"
            android:weightSum="7">
            <EditText
                android:id="@+id/rpm_value"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_marginTop="5dp"
                android:layout_weight="1"
                android:background="@drawable/input"
                android:editable="true"
                android:ems="5"
                android:gravity="center_vertical|right"
                android:hint="@string/nullValue"
                android:imeOptions="actionDone"
                android:inputType="number|numberDecimal"
                android:paddingRight="5dp"
                android:text="@string/nullValue"
                android:textColor="#7ca700"
                android:textSize="20sp"
                android:textStyle="bold" />
            <EditText
                android:id="@+id/maxTilt_value"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_marginTop="5dp"
                android:layout_weight="1"
                android:background="@drawable/input"
                android:editable="true"
                android:ems="5"
                android:gravity="center_vertical|right"
                android:hint="@string/nullValue"
                android:imeOptions="actionDone"
                android:inputType="number|numberDecimal"
                android:paddingRight="5dp"
                android:textColor="#7ca700"
                android:textSize="20dp"
                android:textStyle="bold" />
            <EditText
                android:id="@+id/maxHeight_value"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_marginTop="5dp"
                android:layout_weight="1"
                android:background="@drawable/input"
                android:editable="true"
                android:ems="5"
                android:gravity="center_vertical|right"
                android:hint="@string/nullValue"
                android:imeOptions="actionDone"
                android:inputType="number|numberDecimal"
                android:paddingRight="5dp"
                android:text="@string/nullValue"
                android:textColor="#7ca700"
                android:textSize="20dp"
                android:textStyle="bold" />
            <EditText
                android:id="@+id/remainingCharge_value"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_marginTop="5dp"
                android:layout_weight="1"
                android:background="@drawable/input"
                android:editable="true"
                android:ems="5"
                android:gravity="center_vertical|right"
                android:hint="@string/nullValue"
                android:imeOptions="actionDone"
                android:inputType="number|numberDecimal"
                android:paddingRight="5dp"
                android:text="@string/nullValue"
                android:textColor="#7ca700"
                android:textSize="20dp"
                android:textStyle="bold" />
        </LinearLayout>
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="0dp"
        android:layout_height="fill_parent"
        android:layout_weight="0.4">
        <ImageView
            android:id="@+id/imageView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/image" />
    </RelativeLayout>
</LinearLayout>

