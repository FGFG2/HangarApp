<?xml version="1.0" encoding="UTF-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    tools:context="com.tobyrich.dev.hangarapp.activities.FactoryTestActivity"
    android:orientation="horizontal"
    android:background="@drawable/background">
    <RelativeLayout
        android:layout_width="0dip"
        android:layout_height="fill_parent"
        android:layout_weight="0.5">
        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:orientation="vertical"
            android:baselineAligned="false"
            android:weightSum="7"
            android:padding="15dp">
            <Button
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:text="@string/check_engine"
                android:id="@+id/check_engine"
                android:background="@drawable/button"
                android:clickable="true"
                android:textColor="#7ca700"
                android:textSize="20sp"
                android:textStyle="bold"
                android:gravity="left|center_vertical"
                android:paddingLeft="15dp"
                android:onClick="onClick"/>
            <Button
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:text="@string/rudder_left"
                android:id="@+id/rudder_left"
                android:background="@drawable/button"
                android:clickable="true"
                android:textColor="#7ca700"
                android:textSize="20sp"
                android:textStyle="bold"
                android:gravity="left|center_vertical"
                android:paddingLeft="15dp"
                android:onClick="onClick"
                android:layout_marginTop="5dp" />
            <Button
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:text="@string/rudder_right"
                android:id="@+id/rudder_right"
                android:background="@drawable/button"
                android:clickable="true"
                android:textColor="#7ca700"
                android:textSize="20sp"
                android:textStyle="bold"
                android:gravity="left|center_vertical"
                android:paddingLeft="15dp"
                android:onClick="onClick"
                android:layout_marginTop="5dp" />
        </LinearLayout>
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/fragment_container"
        android:layout_width="0dip"
        android:layout_height="fill_parent"
        android:layout_weight="0.5" />
</LinearLayout>




